{
    "compilerOptions": {
        "target": "es2016",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./dist",
        "**/*.d.ts"
    ]
}